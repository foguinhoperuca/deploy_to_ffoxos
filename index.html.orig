	<script type="text/javascript">
        window.onload = function() {
          var a = document.getElementById("installJames");
          a.onclick = function(evt) {
		    evt.preventDefault();

		    var manifestUrl = 'https://github.com/foguinhoperuca/ffoxos/blob/gh-pages/james/manifest.webapp';
		    // var manifestUrl = 'http://192.168.1.100/james/manifest.webapp';
		    var req = navigator.mozApps.installPackage(manifestUrl);
  		      req.onsuccess = function() {
              alert(this.result.origin);
		    };
  		    req.onerror = function() {
	          alert('ERROR! :(');
	          console.error(this.error);
              alert(this.error.name);
		    };

            return false;
          }
        }
    </script>  
